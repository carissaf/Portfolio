---
import Title from "../Title.astro";
import aboutData from "../../data/about.json";
import Skills from "../Skills.astro";
import DownloadCVButton from "../DownloadCVButton.astro";
import CertificateCard from "../CertificateCard.astro";
---

<section class="justify-center px-80 flex flex-col pt-48">
    <div class="flex flex-col w-full">
        <Title title="About" className="text-6xl self-center"/>
        <p class="my-10 text-lg font-light">{aboutData.desc}</p>

        <Skills/>

        <DownloadCVButton text="Download CV" className="mt-10 w-fit self-end"/>
    </div>

    <div class="mt-32">
        <Title title="Experience" className="text-4xl mb-10"/>
        {aboutData.experience.map((experience, index) => {
            return <div class="flex flex-row justify-between">
                <div class="opacity-50 w-1/3 mr-2 text-lg">{experience.date}</div>

                <div class={index === aboutData.experience.length - 1 ? "w-full text-lg" : "w-full text-lg mb-8"}>
                    <h4 class="font-bold mb-2">{experience.position}</h4>
                    <p class="font-light">{experience.elaboration}</p>
                </div>
            </div>
        })}
    </div>

    <div class="my-32">
        <Title title="Awards & Certificates" className="text-4xl mb-10"/>
        <div class="grid grid-cols-2 gap-8">
            {aboutData.certificates.map((certificate) => {
                return <CertificateCard url={certificate.imgUrl} title={certificate.title}/>
            })}
        </div>

    </div>

</section>