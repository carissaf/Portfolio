---
import Title from "../Title.astro";
import aboutData from "../../data/about.json";
import Skills from "../Skills.astro";
import DownloadCVButton from "../DownloadCVButton.astro";
import CertificateCard from "../CertificateCard.astro";
---

<section class="justify-center px-80 flex flex-col pt-48">
    <div class="flex flex-col w-full">
        <Title title="About" classStyle="text-8xl"/>
        <p class="my-10 text-xl font-light">{aboutData.desc}</p>

        <Skills/>

        <DownloadCVButton text="Download CV" className="mt-10"/>
    </div>

    <div class="mt-32">
        <Title title="Experience" classStyle="text-5xl mb-10"/>
        {aboutData.experience.map((experience, index) => {
            return <div class="flex flex-row justify-between">
                <div class="opacity-50 w-1/3 mr-2 text-xl">{experience.date}</div>

                <div class={index === aboutData.experience.length - 1 ? "w-full text-xl" : "w-full text-xl mb-8"}>
                    <h4 class="font-bold mb-2">{experience.position}</h4>
                    <p class="font-light">{experience.elaboration}</p>
                </div>
            </div>
        })}
    </div>

    <div class="my-32">
        <Title title="Awards & Certificates" classStyle="text-5xl mb-10"/>
        <div class="grid grid-cols-2 gap-8">
            {aboutData.certificates.map((certificate, index) => {
                return <CertificateCard url={certificate.img_path} title={certificate.title}/>
            })}
        </div>

    </div>

</section>