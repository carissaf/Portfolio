---
import DownloadIcon from "./icons/DownloadIcon.astro";

interface ButtonProps{
    text: string;
}

const {text} = Astro.props;
---

<button class="flex place-items-center px-4 py-2 w-fit relative">
    <DownloadIcon/>
    <span class="self-center ml-2 text-2xl font-light">{text}</span>
</button>

<style>
    button{
        overflow: hidden;
        border-radius: 100px;
    }

    button:hover{
        /* color: white; */
    }

    button::before{
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 1px solid black;
        transition: opacity 0.5s, border 0.5s;
        border-radius: 100px;
        
    }

    button:hover::before{
        opacity: 0;
    }

    button::after{
        content: "";
        position: absolute;
        top: -85px;
        left: 0px;
        width: 220px;
        height: 220px;
        background-color: #7FB7D0;
        border-color: transparent;
        border-radius: 50%;
        transform: scale(0.1);
        opacity: 0;
        z-index: -1;
        transition: transform 0.5s, opacity 0.5s, background-color 0.5s;
    }

    button:hover::after{
        opacity: 1;
        transform-origin: 100px 100px;
        transform: scale(1);
    }
    
</style>