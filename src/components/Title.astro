---
const {title, classStyle} = Astro.props

const className = "self-start font-normal w-fit m-0 p-0 relative " + classStyle
---

<h2 class={className} >{title}</h2>
<style>
    h2::before{
        position: absolute;
        background-color: #FBDD7F;
        width: 100%;
        height: 80%;
        bottom: -0.5vw;
        left: -0.5vw;
        content: '';
        z-index: -1;
    }
</style>