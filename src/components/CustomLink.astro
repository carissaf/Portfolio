---
import ArrowRightIcon from "./icons/ArrowRightIcon.astro"

const {link, text, className} = Astro.props
---
<div class={className + " flex flex-row self-end content-center text-light-blue relative w-fit"}>
    <a class="md:text-base text-sm flex flex-row items-center content-center" href={link}>
        {text}
        <div class="arrow"><ArrowRightIcon className="w-6 content-center"/></div>
    </a>
</div>

<style>
    *{
        transition: all .3s ease-in-out;
    }

    a::after{
        content: '';
        background-color: #7FB7D0;
        position: absolute;
        /* left: -0.2vw; */
        bottom: 0;
        width: 0;
        height: 1px;
        z-index: -1;
        transition: all .3s ease-in-out;
    }

    a:hover::after{
        width: 100%;
    }

    a:hover .arrow{
        transform: rotate(-45deg);
    }
</style>
