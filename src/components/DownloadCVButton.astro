---
import DownloadIcon from "./icons/DownloadIcon.astro";

interface ButtonProps{
    text: string;
}

const {text, className} = Astro.props;

const filePath = "/CV_CarissaFabellina.pdf"
---
<a href={filePath} target="_blank" class={className}>
    <button class="flex place-items-center px-4 py-2 w-fit relative">
        <DownloadIcon/>
        <span class="self-center ml-2 text-2xl font-light">{text}</span>
    </button>
</a>


<style>
    button{
        overflow: hidden;
        border-radius: 100px;
    }

    button:hover{
        //color: white;
    }

    button::before{
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 1px solid black;
        transition: opacity 0.5s, border 0.5s;
        border-radius: 100px;
        
    }

    button:hover::before{
        opacity: 0;
    }

    button::after{
        content: "";
        position: absolute;
        top: -85px;
        left: 0;
        width: 220px;
        height: 220px;
        background-color: #7FB7D0;
        border-color: transparent;
        border-radius: 50%;
        transform: scale(0.001);
        //opacity: 0;
        z-index: -1;
        transition: transform 0.5s, opacity 0.5s, background-color 0.5s;
    }

    button:hover::after{
        opacity: 1;
        transform: scale(1);
    }
    
</style>