---
import DownloadIcon from "./icons/DownloadIcon.astro";
const {text, className} = Astro.props;
const filePath = "/CV_CarissaFabellina.pdf"
---
<a href={filePath} target="_blank" class={className}>
    <button class="flex place-items-center px-4 py-2 w-fit relative after:w-[105%] after:aspect-square">
        <DownloadIcon/>
        <span class="self-center ml-2 text-xl font-light">{text}</span>
    </button>
</a>


<style>
    button{
        overflow: hidden;
        border-radius: 100px;

        transition: color 0.5s ease-out 0.1s;
    }

    button:hover{
        color: white;
    }

    button::before{
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 1px solid black;
        transition: opacity 0.5s, border 0.5s;
        border-radius: 100px;
        
    }

    button:hover::before{
        opacity: 0;
    }

    button::after{
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0.0001);
        background-color: #7FB7D0;
        border-color: transparent;
        border-radius: 50%;
        //opacity: 0;
        z-index: -1;
        transition: transform 0.5s, opacity 0.5s, background-color 0.5s;
    }

    button:hover::after{
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }
    
</style>