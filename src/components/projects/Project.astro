---
import projectsData from "../../data/projects.json";
import Title from "../Title.astro";
import ProjectCard from "../ProjectCard.astro";
---

<section class="justify-center md:px-32 px-7 flex flex-col md:pt-48 pt-28">
    <Title title="Projects" className="md:text-6xl text-3xl self-center md:mb-20 mb-10"/>

    <div class="grid md:grid-cols-2 grid-cols-1 gap-8 mb-20 font-bold">
        {projectsData.map(project => {
            return (
                <ProjectCard title={project.title} techs={project.techs} imgUrl={project.imgUrls[0]} category={project.category} />
            )
        })}
    </div>
</section>
