---
import projectsData from "../../data/projects.json";
import Title from "../Title.astro";
import ProjectCard from "../ProjectCard.astro";
---

<section class="justify-center px-32 flex flex-col pt-48">
    <Title title="Projects" className="text-6xl self-center mb-20"/>

    <div class="grid grid-cols-2 gap-8 mb-20 font-bold">
        {projectsData.map(project => {
            return (
                <ProjectCard title={project.title} techs={project.techs} imgUrl={project.imgUrls[0]} category={project.category} />
            )
        })}
    </div>
</section>
